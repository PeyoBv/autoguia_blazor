@page "/foro/{PublicacionId:int}"
@rendermode InteractiveServer
@inject IForoService ForoService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="container py-4">
    @if (cargando)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando publicación...</span>
            </div>
            <p class="mt-2">Cargando publicación...</p>
        </div>
    }
    else if (publicacion == null)
    {
        <div class="text-center py-5">
            <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
            <h3>Publicación no encontrada</h3>
            <p class="text-muted">La publicación que buscas no existe o ha sido eliminada.</p>
            <a href="/foro" class="btn btn-primary">Volver al Foro</a>
        </div>
    }
    else
    {
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Inicio</a></li>
                <li class="breadcrumb-item"><a href="/foro" class="text-decoration-none">Foro</a></li>
                <li class="breadcrumb-item active" aria-current="page">@publicacion.Titulo</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-lg-8">
                <!-- Publicación principal -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="flex-grow-1">
                                <h1 class="h3 mb-2">
                                    @if (publicacion.EsDestacado)
                                    {
                                        <i class="fas fa-star text-warning me-2"></i>
                                    }
                                    @publicacion.Titulo
                                </h1>
                                <div class="d-flex align-items-center gap-3 mb-2">
                                    <small class="text-muted">
                                        <i class="fas fa-user me-1"></i>@publicacion.NombreUsuario
                                    </small>
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>@publicacion.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                    @if (!string.IsNullOrEmpty(publicacion.Categoria))
                                    {
                                        <span class="badge bg-primary">@publicacion.Categoria</span>
                                    }
                                    @if (publicacion.EsCerrado)
                                    {
                                        <span class="badge bg-secondary">Cerrado</span>
                                    }
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <p class="mb-0">@publicacion.Contenido</p>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(publicacion.Etiquetas))
                        {
                            <div class="mb-3">
                                @foreach (var etiqueta in publicacion.Etiquetas.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <span class="badge bg-light text-dark me-1">#@etiqueta.Trim()</span>
                                }
                            </div>
                        }
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex gap-3">
                                <small class="text-muted">
                                    <i class="fas fa-eye me-1"></i>@publicacion.Vistas vistas
                                </small>
                                <small class="text-muted">
                                    <i class="fas fa-comments me-1"></i>@publicacion.TotalRespuestas respuestas
                                </small>
                                <small class="text-muted">
                                    <i class="fas fa-heart me-1"></i>@publicacion.Likes likes
                                </small>
                            </div>
                            <div class="d-flex gap-2">
                                <button class="btn btn-outline-primary btn-sm" @onclick="CompartirPublicacion">
                                    <i class="fas fa-share-alt"></i> Compartir
                                </button>
                                <a href="/foro" class="btn btn-secondary btn-sm">
                                    <i class="fas fa-arrow-left"></i> Volver al Foro
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sección de respuestas -->
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-comments me-2"></i>
                            Respuestas (@publicacion.TotalRespuestas)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Las respuestas del foro estarán disponibles en la próxima actualización.
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="sticky-top">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h6 class="mb-0">
                                <i class="fas fa-info-circle me-2"></i>
                                Información
                            </h6>
                        </div>
                        <div class="card-body">
                            <p class="small mb-2">Esta publicación fue creada el @publicacion.FechaCreacion.ToString("dd 'de' MMMM 'de' yyyy").</p>
                            @if (!string.IsNullOrEmpty(publicacion.Categoria))
                            {
                                <p class="small mb-2">
                                    <strong>Categoría:</strong> @publicacion.Categoria
                                </p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int PublicacionId { get; set; }
    
    private PublicacionForoDto? publicacion;
    private bool cargando = true;

    protected override async Task OnInitializedAsync()
    {
        await CargarPublicacion();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (PublicacionId > 0)
        {
            cargando = true;
            StateHasChanged();
            await CargarPublicacion();
        }
    }

    private async Task CargarPublicacion()
    {
        try
        {
            publicacion = await ForoService.ObtenerPublicacionPorIdAsync(PublicacionId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cargando publicación: {ex.Message}");
            publicacion = null;
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private async Task CompartirPublicacion()
    {
        try
        {
            var url = Navigation.Uri;
            await JSRuntime.InvokeVoidAsync("autoguiaTest.shareContent", 
                $"Publicación: {publicacion?.Titulo}", 
                $"Revisa esta publicación en AutoGuía: {publicacion?.Titulo}", 
                url);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error compartiendo: {ex.Message}");
        }
    }
}