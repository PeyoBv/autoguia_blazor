@page "/test"
@rendermode InteractiveServer

<div class="container py-4">
    <h1>Página de Prueba</h1>
    <p>Esta es una página de prueba simple para verificar el funcionamiento básico.</p>
    
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Contador de prueba</h5>
            <p class="card-text">Contador actual: @contador</p>
            <button class="btn btn-primary" @onclick="IncrementarContador">
                Incrementar
            </button>
        </div>
    </div>
    
    <div class="alert alert-info mt-4">
        <i class="fas fa-info-circle me-2"></i>
        Si ves esta página sin errores, el sistema básico está funcionando correctamente.
    </div>
</div>

@code {
    private int contador = 0;
    
    private void IncrementarContador()
    {
        contador++;
    }
}